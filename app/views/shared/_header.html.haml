%section#top-header.bg-danger.py-2
  .container
    .row.align-items-center
      .col-md-2
        %h1.text-center
          = link_to "Yep", home_path, class: 'text-white yep'
      .col-md-7
        = render 'shared/search_bar', search_name: search_name, search_location: search_location
      - if logged_in?
        .col-md-3
          .d-flex.justify-content-around
            = link_to businesses_path, class: "btn bg-custom-red px-3 my-2 bg-danger text-white", "data-toggle" => "tooltip", "data-placement" => "bottom", title: "See All Businesses" do
              %i.far.fa-building
            = link_to reviews_path, class:"btn bg-custom-red px-3 my-2 bg-danger text-white", "data-toggle" => "tooltip", "data-placement" => "bottom", title: "See All Reviews" do
              %i.far.fa-star
            .dropdown
              .btn.btn-group(data-toggle="dropdown")
                %button.btn.btn-light.no-blue-glow.user-icon(type="button")
                  %i.far.fa-user
                %button.btn.text-white.bg-custom-red.dropdown-toggle.no-blue-glow.px-2(type="button")
              .dropdown-menu
                .d-flex
                  = link_to user_path(current_user), class: "user-icon bg-light d-block p-2 ml-2 rounded align-self-center" do
                    %i.far.fa-user.fa-3x
                  .p-2.mr-2
                    = render 'users/profile', user: current_user
                .dropdown-divider
                = link_to user_path(current_user), class: "dropdown-item text-primary" do
                  %i.far.fa-user.text-secondary.mr-2.fixed-width-1.text-center
                  %span.small.font-weight-bold
                    About Me
                = link_to edit_setting_path(current_user), class: "dropdown-item text-primary" do
                  %i.fas.fa-cog.text-secondary.mr-2.fixed-width-1.text-center 
                  %span.small.font-weight-bold
                    Account Settings
                .dropdown-divider
                = link_to "Log Out", logout_path, class: "dropdown-item text-primary"
      - else
        .col-md-3
          .d-flex
            = link_to 'Log in', login_path, class: "btn btn-danger bg-custom-red text-white"
            = link_to 'Sign Up', register_path, class: "btn btn-light ml-3"



          

%script
  $('[data-toggle="tooltip"]').tooltip();

        


