.container
  .row.mt-5
    .col-md-8
      %h4.text-danger.font-weight-bold.mb-4 Add New Business
      = bootstrap_form_for @business do |f|
        = f.text_field :name, class: "form-control-sm"
        = f.text_field :address_1, class: "form-control-sm"
        = f.text_field :address_2, class: "form-control-sm"
        = f.text_field :city, class: "form-control-sm"
        = f.text_field :country, class: "form-control-sm"
        = f.phone_field :phone, class: "form-control-sm"
        = f.label :name, 'Tags <small class="text-muted ml-2">Enter up to three tags</small>'.html_safe
        %div.form-row.mb-2
          %div.col
            = text_field_tag "[business]tags[]name", nil, hide_label: true, placeholder: "e.g. Food", class: "form-control form-control-sm"
          %div.col
            = text_field_tag "[business]tags[]name", nil, hide_label: true, placeholder: "e.g. Irish", class: "form-control form-control-sm"
          %div.col
            = text_field_tag "[business]tags[]name", nil, hide_label: true, placeholder: "e.g. Cheap", class: "form-control form-control-sm"
        = f.submit "Submit", class: "btn btn-danger mr-2"
        = link_to 'Cancel', businesses_path
